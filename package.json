{
  "name": "cypress-learn",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:FreaKzero/cypress-learn.git",
  "license": "MIT",
  "dependencies": {
    "cypress": "^4.7.0"
  },
  "scripts": {
    "report:init": "mkdir cypress/reports/mochareports && cp cypress/screenshots cypress/reports/mochareports/screenshots && cp cypress/videos cypress/reports/mochareports/videos",
    "report:gen": "yarn combine-reports && yarn run generate-report",
    "combine-reports": "mochawesome-merge cypress/reports/mocha/*.json > cypress/reports/mochareports/report.json",
    "generate-report": "marge cypress/reports/mochareports/report.json -f report -o cypress/reports/mochareports",
    "posttest": "npm run combine-reports && npm run generate-report",
    "test" : "npm run scripts || npm run posttest"
  },
  "devDependencies": {
    "cypress-multi-reporters": "^1.4.0",
    "mocha": "^8.0.1",
    "mochawesome": "^6.1.1",
    "mochawesome-merge": "^4.1.0",
    "mochawesome-report-generator": "^5.1.0"
  }
}
